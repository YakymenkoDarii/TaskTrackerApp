@using System.Security.Claims
@using TaskTrackerApp.Frontend.Services.Abstraction.Interfaces.Services
@using TaskTrackerApp.Frontend.Services.Services.Auth
@using TaskTrackerApp.Frontend.Services.Services.Hubs
@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject IAuthService Auth
@inject InvitationSignalRService SignalRService

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@((e) => DrawerToggle())" />

        <MudText Typo="Typo.h5" Class="ml-3">Task Tracker</MudText>
        <MudSpacer />

        <AuthorizeView>
            <Authorized>
                <MudButton Variant="Variant.Filled"
                           Color="Color.Error"
                           OnClick="LogoutAsync">
                    Logout
                </MudButton>
            </Authorized>

            <NotAuthorized>
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           OnClick="@(() => Navigation.NavigateTo("/login"))">
                    Login
                </MudButton>
            </NotAuthorized>
        </AuthorizeView>

        <MudAvatar Color="Color.Secondary">
            @UserLetter
        </MudAvatar>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen"
               ClipMode="DrawerClipMode.Always"
               Elevation="2">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
            @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    private string? UserLetter = "U";

    [Inject] public AuthenticationStateProvider AuthStateProvider { get; set; } = default!;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private async Task LogoutAsync()
    {
        await Auth.LogoutAsync();

        ((CustomAuthStateProvider)AuthStateProvider).NotifyUserLogout();

        Navigation.NavigateTo("/login", true);
    }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity is not null && user.Identity.IsAuthenticated)
        {
            var tagName = user.FindFirst(ClaimTypes.Name)?.Value;

            if (!string.IsNullOrEmpty(tagName))
            {
                UserLetter = tagName[0].ToString().ToUpper();
            }

            try
            {
                await SignalRService.StartConnection();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"SignalR skipped: {ex.Message}");
            }
        }
    }
}
